{
  "name": "@drop-compress-image/app",
  "version": "3.2.2",
  "description": "Drop Compress Image is a desktop application that converts images to WebP/Avif/JPEG XL/PNG/JPEG format using drag-and-drop functionality. Built with Vite, Vue 3, TypeScript, and Tauri.",
  "license": "MIT",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:tauri": "CARGO_INCREMENTAL=1 tauri dev",
    "clean": "rimraf ./node_modules/.vite",
    "build": "run-p type-check \"build-only {@}\" build:tauri --",
    "build:analyze": "vite build --mode analyze",
    "build:clean": "rimraf dist",
    "build:tauri": "tauri build",
    "build:tauri:mac": "tauri build --target universal-apple-darwin",
    "build:tauri:windows-x64": "tauri build --target x86_64-pc-windows-msvc",
    "build:tauri:windows-arm64": "tauri build --target aarch64-pc-windows-msvc",
    "build:tauri:windows-docker-x64": "cd .. && ./scripts/build-windows-docker.sh x64",
    "build:tauri:windows-docker-arm64": "cd .. && ./scripts/build-windows-docker.sh arm64",
    "build:tauri:linux-x64": "tauri build --target x86_64-unknown-linux-gnu",
    "build:tauri:linux-arm64": "tauri build --target aarch64-unknown-linux-gnu",
    "build:tauri:linux-docker-x64": "node -e \"require('child_process').execSync(process.platform === 'win32' ? 'pwsh ..\\\\scripts\\\\build-linux-docker.ps1 -Target x64' : 'bash ../scripts/build-linux-docker.sh x64', {stdio: 'inherit'})\"",
    "build:tauri:linux-docker-arm64": "node -e \"require('child_process').execSync(process.platform === 'win32' ? 'pwsh ..\\\\scripts\\\\build-linux-docker.ps1 -Target arm64' : 'bash ../scripts/build-linux-docker.sh arm64', {stdio: 'inherit'})\"",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint && prettier src/**/*.{ts,vue} -w -u",
    "lint:style": "stylelint \"./src/**/*.{css,sass,scss,htm,html,vue}\" --fix --cache-location ./node_modules/.vite/vite-plugin-stylelint && prettier \"./src/**/*.{css,sass,scss,htm,html,vue}\" -w -u",
    "tauri": "tauri"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-fs": "^2.4.5",
    "@tauri-apps/plugin-http": "^2.5.7",
    "@tauri-apps/plugin-notification": "^2.3.3",
    "@tauri-apps/plugin-opener": "^2.5.3",
    "@tauri-apps/plugin-os": "^2.3.2",
    "@vueuse/sound": "^2.1.3",
    "pinia": "^3.0.4",
    "pinia-plugin-persistedstate": "^4.7.1",
    "unified-network": "^0.6.4",
    "vue": "^3.5.28",
    "vue-i18n": "^11.2.8",
    "vuetify": "^3.11.8"
  },
  "devDependencies": {
    "@intlify/unplugin-vue-i18n": "^11.0.3",
    "@modyfi/vite-plugin-yaml": "^1.1.1",
    "@tauri-apps/cli": "^2.10.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "eslint-import-resolver-custom-alias": "^1.3.2",
    "npm-run-all2": "^8.0.4",
    "resize-observer-polyfill": "^1.5.1",
    "rimraf": "^6.1.3",
    "rollup-plugin-visualizer": "^6.0.5",
    "sass-embedded": "^1.97.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-checker": "^0.12.0",
    "vite-plugin-vue-devtools": "^8.0.6",
    "vite-plugin-vuetify": "^2.1.3",
    "vue-tsc": "^3.2.4"
  }
}