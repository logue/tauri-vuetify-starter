{
  "name": "tauri-vuetify-starter",
  "description": "A modern desktop application template built with Tauri v2 and Vue 3",
  "license": "MIT",
  "type": "module",
  "private": true,
  "author": {
    "name": "Logue",
    "email": "logue@hotmail.co.jp",
    "url": "https://logue.dev/"
  },
  "homepage": "https://github.com/logue/tauri-vuetify-starter",
  "repository": {
    "type": "git",
    "url": "git@github.com:logue/tauri-vuetify-starter.git"
  },
  "engines": {
    "node": ">=24",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.30.0",
  "scripts": {
    "dev": "pnpm --filter app dev",
    "dev:tauri": "pnpm --filter app dev:tauri",
    "dev:docs": "pnpm --filter docs dev",
    "clean": "pnpm --recursive exec rimraf node_modules/.vite",
    "build": "pnpm --filter app build",
    "build:docs": "pnpm --filter docs build",
    "build:analyze": "pnpm --filter app build:analyze",
    "build:clean": "pnpm --recursive exec rimraf dist",
    "build:tauri": "pnpm --filter app build:tauri",
    "build:tauri:linux-x64": "pnpm --filter app build:tauri:linux-docker-x64",
    "build:tauri:linux-arm64": "pnpm --filter app build:tauri:linux-docker-arm64",
    "package:chocolatey": "pwsh ./scripts/build-chocolatey.ps1",
    "package:homebrew": "bash ./scripts/build-homebrew.sh",
    "generate": "pnpm --filter docs generate",
    "deploy": "pnpm --filter docs deploy",
    "lint": "pnpm --filter app lint && pnpm --filter docs lint",
    "lint:style": "pnpm --filter app lint:style && pnpm --filter docs lint:style",
    "preview": "pnpm --filter app preview",
    "preview:docs": "pnpm --filter docs preview",
    "type-check": "pnpm --recursive exec vue-tsc --build --force",
    "tauri": "pnpm --filter app tauri",
    "prepare": "husky",
    "postinstall": "pnpm --filter docs nuxt:prepare"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^24.0.0",
    "@types/node": "^25.2.3",
    "eslint": "^10.0.0",
    "eslint-import-resolver-custom-alias": "^1.3.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-vue": "^10.8.0",
    "eslint-plugin-vuejs-accessibility": "^2.5.0",
    "eslint-plugin-vuetify": "^2.5.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.7.0",
    "@vue/tsconfig": "^0.8.1",
    "@nuxt/eslint": "1.15.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss-html": "^1.8.1",
    "prettier": "^3.8.1",
    "stylelint": "^17.3.0",
    "stylelint-config-recommended-scss": "^17.0.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-order": "^7.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  }
}